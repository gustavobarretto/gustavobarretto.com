---
import { NAV_LINKS, SOCIALS } from "@/config";
import SocialIcon from "@/components/SocialIcon.astro";
import "../styles/global.css";
interface Props {
  title: string;
  description?: string;
}
const { title, description } = Astro.props;
const siteTitle = title ? `${title} · Gustavo Barretto` : "Gustavo Barretto";
const desc = description ?? "Personal website — projects and blog.";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={desc} />
    <title>{siteTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        if (stored === 'dark') document.documentElement.classList.add('dark');
        else document.documentElement.classList.remove('dark');
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="border-b border-border bg-[var(--header-bg)]">
      <nav class="max-w-2xl mx-auto px-6 py-3 flex flex-wrap justify-between items-center gap-2">
        <a href="/" class="text-2xl font-medium text-accent hover:opacity-80 transition-opacity">Gustavo Barretto</a>
        <div class="flex flex-wrap items-center gap-6 sm:gap-8 [color:var(--header-text)]">
          <ul class="flex gap-6 sm:gap-8">
            {NAV_LINKS.map((link) => (
              <li>
                <a href={link.href} class="hover:text-accent transition-colors">{link.label}</a>
              </li>
            ))}
          </ul>
          <button
            type="button"
            id="theme-toggle"
            aria-label="Toggle light/dark theme"
            class="p-2 rounded-md hover:text-accent transition-colors border border-transparent hover:border-border"
          >
            <span id="theme-icon-light" class="hidden dark:inline" aria-hidden="true">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="4"/><path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"/></svg>
            </span>
            <span id="theme-icon-dark" class="inline dark:hidden" aria-hidden="true">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
            </span>
          </button>
          <ul class="flex gap-6 sm:gap-8 text-sm [color:var(--header-text)]">
            {SOCIALS.map((s) => (
              <li>
                <SocialIcon href={s.href} name={s.name} icon={s.icon} />
              </li>
            ))}
          </ul>
        </div>
      </nav>
    </header>
    <main class="flex-1 max-w-2xl mx-auto w-full px-6 py-12">
      <slot />
    </main>
    <footer class="border-t border-border mt-auto">
      <div class="max-w-2xl mx-auto px-6 py-8 flex flex-wrap gap-6 justify-center">
        {SOCIALS.map((s) => (
          <SocialIcon href={s.href} name={s.name} icon={s.icon} />
        ))}
      </div>
    </footer>
    <script>
      document.getElementById('theme-toggle')?.addEventListener('click', function() {
        const html = document.documentElement;
        const isDark = html.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    </script>
  </body>
</html>
